

@using WebTraSua.Models;
@model List<GioHang>

@{
    ViewBag.Title = "Đơn Đặt Hàng";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<hr /><br />
<h2 style="text-align:center;font-size:20px;font-weight:bold">Thông Tin Đặt Hàng</h2><br />
<table class="wrap">
    <tr style="text-align:center; font-weight:bold;border:solid;font-size:20px">
        <td style="border:solid"> Tên Sản Phẩm </td>
        <td style="border:solid"> Ảnh </td>
        <td style="border:solid"> Số Lượng </td>
        <td style="border:solid"> Đơn Giá </td>
        <td style="border:solid"> Thành Tiền </td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center; font-weight:bold;border:solid">
            <td style="border:solid"> @item.sTenSP</td>
            <td border:solid><img src="~/images/@item.sAnhBia" width="100"></td>
            <td style="border:solid">@item.iSlMua</td>
            <td style="border:solid">@item.dGiaBan</td>
            <td style="border:solid">@item.dThanhTien</td>
        </tr>
    }
    <tr style="font-weight: bold; text-align: right; color: red;font-size:20px">
        <td colspan="3">Số Lượng Sản Phẩm: @ViewBag.TongSoLuong</td>
        <td colspan="2">Tổng Tiền: @ViewBag.TongTien VNĐ</td>
    </tr>
    <tr style="font-weight: bold; color:blue; text-align:right">
        <td colspan="6">
            @Html.ActionLink("Xem Lại Giỏ Hàng", "GioHang", "GioHang")
        </td>
    </tr>
</table>
<hr />
<h2 style="text-align:center;font-size:20px;font-weight:bold">Thông Tin Khách Hàng</h2>
@{
    KhachHang kh = (KhachHang)Session["TaiKhoan"];
}<br />
<table class="wrap" style="font-size:20px">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td style="text-align:center"> Họ Tên Khách Hàng: <span style="font-weight:bold">@kh.HoTen</span> </td>
        </tr>
        <tr style="height:40px">
            <td style="text-align:center"> Địa Chỉ: <span style="font-weight:bold">@kh.DiaChi_KH</span> </td>
        </tr>
        <tr style="height:40px">
            <td style="text-align:center"> Điện Thoại: <span style="font-weight:bold">@kh.DienThoai_KH</span></td>
        </tr>
        <tr style="height:40px">
            <td style="text-align:center"> Ngày Đặt: <span style="font-weight:bold">@DateTime.Now.ToShortDateString()</span></td>
        </tr>
        <tr style="height:40px">
            <td style="text-align:center"> Ngày Giao Hàng: <input required type="date" name="NgayGiao" style="height:35px;width:160px;font-size:18px" /></td>
        </tr>
        <tr style="font-size:20px;text-align:center;height:100px">
            <td>
                <hr />
                <p style="color:darkred">* Vui Lòng Chọn Hình Thức Thanh Toán</p>
                <input type="checkbox" required value="" /><span style="font-size:17px"> Thanh Toán Khi Nhận Hàng</span>
            </td>
        </tr>
        <tr style="height:30px;text-align: center">
            <td colspan="2">
                <input type="Submit" value="Xác Nhận Đặt Hàng" style="font-size:20px" />
            </td>
        </tr>
    }
</table><br />
