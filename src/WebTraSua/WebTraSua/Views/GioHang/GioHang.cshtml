@using WebTraSua.Models;
@model List<GioHang>
@{
    ViewBag.Title = "Giỏ Hàng";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<style type="text/css">
    #DatHang a {
        font-size: 20px;
    }

        #DatHang a:hover {
            font-size: 30px;
        }
</style><br />
<h2 style="text-align:center; font-size:20px;font-weight:bold">Giỏ Hàng Của Bạn</h2><br />
<table class="wrap" style="border:solid">
    <tr style="text-align:center; font-weight:bold;border:solid ">
        @*<td>Mã Sản Phẩm</td>*@
        <td></td>
        <td>Tên Sản Phẩm</td>
        <td>Ảnh</td>
        <td>SL Mua</td>
        <td>Đơn Giá</td>
        <td>Thành Tiền</td>
        <td colspan="3">Tùy Chọn</td>
        <td></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center; font-weight:bold;border:solid">
            @*<td style="color :#0094ff">@item.MaSP</td>*@

            <td style="border:solid"><img src="~/image_slide/Close-2-icon.png" />@Html.ActionLink("Xóa", "XoaGioHang", new { @iMaSP = item.MaSP })</td>
            <td style="border:solid">@item.sTenSP</td>
            <td style="border:solid"><img src="~/images/@item.sAnhBia " width="100"></td>
            @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @iMaSP = item.MaSP }))
            {
                <td style="border:solid">
                    <input type="number" min="1" max="50" name="txtSlMua" value="@item.iSlMua" style="height:40px;width:60px;font-size:40px" />
                    <input type="submit" value="Lưu" style="font-size:20px">
                </td>
                <td style="border:solid">@item.dGiaBan</td>
                <td style="border:solid">@item.dThanhTien</td>
                <td><button style="font-size:20px"><a href="@Url.Action("ChiTietSanPham", "WebTraSua" , new { id = item.MaSP})">Chi tiết </a></button></td>
                <td></td>
            }
        </tr>
    }
    <tr style="font-weight: bold; text-align: right;border:solid">
        <td colspan="4">Số Lượng Sản Phẩm: @ViewBag.TongSoLuong</td>
        <td colspan="2">Tổng Tiền: @ViewBag.TongTien VNĐ</td>
    </tr>
    <tr style="text-align:center;font-weight: bold;border:solid">
        <td colspan="8">
            <span style="color:red">@Html.ActionLink("Xóa Giỏ Hàng", "XoaTatCaGioHang")</span>
        </td>
    </tr>
</table><br />
<div style="text-align: center"><button id="DatHang">@Html.ActionLink("Đặt Hàng", "DatHang", "GioHang")</button></div><br /><br /><br /><br /><br />