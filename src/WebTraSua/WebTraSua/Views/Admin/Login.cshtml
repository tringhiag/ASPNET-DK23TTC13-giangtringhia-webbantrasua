
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin - Đăng Nhập</title>
    <link rel="stylesheet" href="~/Vendor/css/style.css">
</head>
<body>
    <div class="wrapper">
        <div class="container">
            <h1>Đăng Nhập Tài Khoản Admin!</h1>
            <h4 style="color:white; text-align:center">@ViewBag.ThongBao </h4>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <form class="form">
                    <input type="text" name="User_Admin" placeholder="Tài Khoản" required autocomplete="off">
                    <input type="password" name="Pass_Admin" placeholder="Mật Khẩu" required autocomplete="off">

                    <button type="submit">Đăng Nhập</button>
                </form>
            }
        </div>
        <ul class="bg-bubbles">
            <li><img src="~/images/1b.png" /></li>
            <li><img src="~/images/5a.png" /></li>
            <li><img src="~/images/4a.png" /></li>
            <li><img src="~/images/1a.png" /></li>
            <li><img src="~/images/2a.png" /></li>
            <li><img src="~/images/3b.png" /></li>
            <li><img src="~/image_slide/TS1.png" /></li>
            <li><img src="~/images/logo.png" /></li>
            <li><img src="~/image_slide/TS2.png" /></li>
            <li><img src="~/images/5c.png" /></li>
            <li><img src="~/images/2b.png" /></li>
            <li><img src="~/images/2f.png" /></li>
            <li><img src="~/images/2e.png" /></li>
            <li><img src="~/images/5b.png" /></li>
            <li><img src="~/images/1c.png" /></li>
            <li><img src="~/images/1d.png" /></li>
            <li><img src="~/images/3d.png" /></li>
            <li><img src="~/images/3a.png" /></li>
            <li><img src="~/image_slide/TS1.png" /></li>
            <li><img src="~/image_slide/TS2.png" /></li>
            <li><img src="~/image_slide/TS2.png" /></li>
            <li><img src="~/image_slide/TS1.png" /></li>
            <li><img src="~/image_slide/TS2.png" /></li>
            <li><img src="~/image_slide/TS1.png" /></li>
        </ul>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="~/Vendor/js/index.js"></script>
</body>
</html>
