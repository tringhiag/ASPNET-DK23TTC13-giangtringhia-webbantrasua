@model WebTraSua.Models.TheLoaiSanPham
@{
    ViewBag.Title = "SuaTheLoai";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br /><br />
<h2>Sửa Thể Loại Sản Phẩm</h2>
@using (Html.BeginForm("SuaTheLoai", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>TheLoaiSanPham</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MaTheLoai)
        <div class="form-group">
            @Html.LabelFor(model => model.MaTheLoai, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div style="font:18px; padding: 5px 0 0 5px">@ViewBag.MaTheLoai </div>
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2" style="font-weight:bold">Tên Thể Loại</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenTheLoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTheLoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Logo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                Chọn Ảnh Mới
                <input type="file" name="fileUpload_logo" />
                <img src="@Url.Content("~/images/" + Model.Logo)" width="120" /> (Ảnh Hiện Tại)
                @*thong bao trung*@
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu Lại" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
