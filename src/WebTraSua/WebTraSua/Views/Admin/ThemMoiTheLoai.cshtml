@model  WebTraSua.Models.TheLoaiSanPham

@{
    ViewBag.Title = "Thêm Mới Thể Loại";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br /><br />
<h2>Thêm Thể Loại</h2>
@using (Html.BeginForm("ThemMoiTheLoai", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Thể Loại</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="control-label col-md-2" style="font-weight:bold">Mã Thể Loại</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaTheLoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaTheLoai, "", new { @class = "text-danger" })
            </div>
            <div class="control-label col-md-2" style="font-weight:bold">Tên Thể Loại</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenTheLoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTheLoai, "", new { @class = "text-default" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2" style="font-weight:bold">Logo</div>
            <input type="file" name="fileUpload_Logo" />
            @*thong bao trung*@
            @ViewBag.Thongbao
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm Thể Loại" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div style="font-size:20px">@Html.ActionLink("Về trang Quản Lý", "TheLoaiSanPham")</div>



